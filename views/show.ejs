<% include ./partials/header %>

  <div class='ui main text container segment'>
    <div class='ui huge header'>
      <h1> <%= post.title %> </h1>
    </div>
    <div class='ui top attached'>
      <div class='item'>
        <img class='ui centered rounded image' src='<%= post.image %>'>
      </div>
      <div class='content'>
        <p> <%= post.created.toDateString() %> </p>
      </div>
    </div>
    <div class='description'>
      <p> <%= post.body %> </p>
    </div>
    <div class='button-container'>
      <a class='ui blue basic button' href='/posts/<%= post._id %>/edit'>
        Edit this post
      </a>
      <form class='delete-form' method='POST' action='/posts/<%= post._id %>?_method=DELETE'>
        <button class='ui red basic button'> Delete this post </button>
      </form>
    </div>
  </div>

<% include ./partials/footer %>
