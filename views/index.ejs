<% include ./partials/header %>

<h1>Posts</h1>

<ul>
  <% posts.map((post) => { %>
      <li>
        <h3> <%= post.title %> </h3>
        <img src='<%= post.image %>'>
        <p> <%= post.created.toDateString() %> </p>
        <p> <%= post.body.substring(0, 100) %> ... </p>
        <a href='/posts/<%= post._id %>'> Read More </a>
      </li>
  <% }) %>
</ul>

<% include ./partials/footer %>
